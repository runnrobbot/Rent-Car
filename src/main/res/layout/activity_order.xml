<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Constarain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".orderActivity">

    <LinearLayout
        android:id="@+id/linearLayout21"
        android:layout_width="408dp"
        android:layout_height="94dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/listView1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="146dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#E91E63"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageBtnBack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#FD0505"
                android:tint="@color/white"
                app:srcCompat="?attr/homeAsUpIndicator" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="413dp"
            android:layout_height="96dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FD0505"
                android:fontFamily="sans-serif-black"
                android:text="ENF MOBILINDO"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="36sp"
                app:autoSizeTextType="none" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="416dp"
        android:layout_height="562dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout24">

        <Space
            android:layout_width="match_parent"
            android:layout_height="18dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="18dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:text="Nama"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:autoSizeTextType="uniform" />

        <EditText
            android:id="@+id/edtUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:text="Alamat"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:autoSizeTextType="uniform" />

        <EditText
            android:id="@+id/edtAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:text="Email"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:autoSizeTextType="uniform" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:text="Nomor Handphone"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:autoSizeTextType="uniform" />

        <EditText
            android:id="@+id/edtNomor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:text="Peminjaman"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:autoSizeTextType="uniform" />

        <EditText
            android:id="@+id/edtPeminjaman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btnBook"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:backgroundTint="#FD0505"
            android:text="BOOK"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout24"
        android:layout_width="415dp"
        android:layout_height="68dp"
        android:layout_marginTop="96dp"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout10"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:layout_weight="1"
            android:text="ORDER FORM"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:textStyle="bold"
            app:autoSizeTextType="none" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>